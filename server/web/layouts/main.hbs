            {{/if}}
        </ul>
    </nav>
    {{#if notification}}
        <div id="notification">
            {{notification}}
        </div>
    {{/if}}
    <div id="flashMessages">
        {{!-- {{#each messages.message as |message|}}
            {{#each message}}
                <div class="flashMessage {{@key}}">{{this}}</div>
            {{/each}}
        {{/each}} --}}
        {{#each messages as |message|}}
            {{#each message}}
                <div class="flashMessage {{@key}}">{{this}}</div>
            {{/each}}
        {{/each}}
        {{!-- <script>
            setTimeout(() => {document.getElementById("flashMessages").remove()}, 3000);
        </script> --}}
    </div>
    {{{body}}}
    <footer></footer>
